{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "#/",
  "type": "object",
  "description": "schema specification for ONVIF profile S",
  "ptz": {
    "AbsoluteMoveArg": {
      "type": "object",
      "properties": {
        "ProfileToken": {
          "type": "string"
        },
        "Position": {
          "type": "object",
          "properties": {
            "PanTilt": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "space": {
                  "type": "string",
                  "$ref": "#/ptz/SpaceSelector"
                }
              },
              "required": [
                "x",
                "y"
              ]
            },
            "Zoom": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number"
                },
                "space": {
                  "type": "string",
                  "$ref": "#/ptz/SpaceSelector"
                }
              },
              "required": [
                "x"
              ]
            }
          }
        },
        "Speed": {
          "type": "object",
          "properties": {
            "PanTilt": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "space": {
                  "type": "string",
                  "$ref": "#/ptz/SpaceSelector"
                }
              },
              "required": [
                "x",
                "y"
              ]
            },
            "Zoom": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number"
                },
                "space": {
                  "type": "string",
                  "$ref": "#/ptz/SpaceSelector"
                }
              },
              "required": [
                "x"
              ]
            }
          }
        }
      },
      "required": [
        "Position"
      ]
    },
    "SpaceSelector": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^http://www.onvif.org/ver10/tptz/PanTiltSpaces/PositionGenericSpace$"
        },
        {
          "type": "string",
          "pattern": "^http://www.onvif.org/ver10/tptz/PanTiltSpaces/VelocityGenericSpace$"
        },
        {
          "type": "string",
          "pattern": "^http://www.onvif.org/ver10/tptz/PanTiltSpaces/TranslationGenericSpace$"
        },
        {
          "type": "string",
          "pattern": "^http://www.onvif.org/ver10/tptz/PanTiltSpaces/GenericSpeedSpace$"
        }
      ]
    }
  }
}